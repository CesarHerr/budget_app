<section class="groups">
  <ul>
    <% @groups.each do |group|%>
      <li>
        <%= link_to group_path(group) do %>
          <h2><%= group.name %></h2>
        <% end %>
        <%= image_tag image_path("icons/#{group.icon}") %>

        <p>Total Amount: XXXX</p>        
      </li>
    <% end %>
  </ul>
  <%= link_to "New Category", new_group_path %>
</section>