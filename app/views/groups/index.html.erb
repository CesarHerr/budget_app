<section class="flex-col items-center w-full bg-gray-100 min-h-screen">
  <h1 class="py-8 bg-cBlue-100 min-w-full text-white text-center text-3xl fixed top-0">
    Categories
  </h1>

  <ul class="pt-24 pb-24 ">
    <% @groups.each do |group| %>

    <%= link_to group_path(group) do %>
        <li class=" flex flex-row justify-around w-11/12 items-center bg-white 
                    mx-auto my-6 max-h-70 rounded hover:scale-105 transition-all border-2 hover:border-separate">    
          <%= image_tag image_path("icons/#{group.icon}") , class: "w-2/12 py-2 max-w-xxs"%>
          <h2><%= group.name %></h2>  
          <p class="font-bold">$
            <% total = 0 %>
            <% @paid_ups.each do |paid| %>
              <% if paid.group_id == group.id %>
                <% total += paid.amount %>
              <% end %>
            <% end %>
            <%= total %>
          </p>
        </li>
      <% end %>

    <% end %>
  </ul>
  <div class="w-full bg-cGreen-100 fixed bottom-0 h-24">
    <%= link_to "New Category", new_group_path, 
    class: "absolute w-10/12 bottom-4 border-2 border-gray-200 bg-cGreen-100 
    text-center py-4 mx-auto rounded text-white left-1/2 transform -translate-x-1/2 hover:scale-105 transition-all" %>
  </div>
</section>
