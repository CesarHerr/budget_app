<section class="groups">
  <ul>
    <% @groups.each do |group|%>
      <li>
        <%= link_to group_path(group) do %>
          <h2><%= group.name %></h2>
        <% end %>
        <p><%= group.icon %></p>
        <p>Total Amount: XXXX</p>        
      </li>
    <% end %>
  </ul>
  <button>New Category</button>
</section>