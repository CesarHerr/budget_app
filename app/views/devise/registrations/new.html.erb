<% unless user_signed_in? %>
  <section class="flex-col items-center w-full bg-gray-50 min-h-screen relative">
    <h2 class="py-6 bg-cBlue-100 min-w-full text-white text-center text-xl">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
      html: {class: 'relative'}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field pt-4">   
        <%= f.text_field :name, autofocus: true, autocomplete: "name",
         class: "w-full border-gray-200", placeholder: "Full name", 'aria-label': "Name" %>
      </div>

      <div class="field pt-0">    
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border-gray-200", placeholder: "Email", 'aria-label': "email"%>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full border-gray-200", placeholder: "Password", 'aria-label': "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
         class: "w-full border-gray-200", placeholder: "Password Confirmation", 'aria-label': "password confirmation" %>
      </div>

      <div class="actions absolute -top-7 right-2 text-white">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <div class="absolute bottom-4 min-w-full text-center text-1xl">
      <%= render "devise/shared/links" %>
    </div>
  </section>
<% end %>
