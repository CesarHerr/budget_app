<section class="flex-col items-center w-full bg-gray-50 min-h-screen md:min-h-96 relative md:w-[50%] mx-auto
                md:translate-y-1/2 md:rounded-xl md:border md:border-gray-400 md:shadow-2xl" data-controller="loader">
  <h2 class="py-6 bg-cBlue-100 min-w-full text-white text-center text-xl md:rounded-lg">LOGIN</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),
      html: { class: "relative hidden", data: { loader_target: "form" } }) do |f| %>

    <div class="field pt-4">    
      <%= f.email_field :email, autofocus: false, autocomplete: "email",
                         placeholder: "Email", "aria-label": "email", 
                         class: "w-full border-gray-200", id: "email-field" %>
    </div>

    <div class="field pt-0">
      <%= f.password_field :password, autocomplete: "current-password",
                            placeholder: "Password", "aria-label": "password",
                            class: "w-full border-gray-200" %>
    </div>
    
    <div class="actions text-white absolute -top-7 right-2">
      <%= f.submit "Log in", class: "md:hover:scale-110 hover:cursor-pointer transition-all", data: { action: "click->loader#handleSubmit" } %>
    </div>

    <div class="text-center py-4 text-gray-400">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  <% end %>
    
    <div data-loader-target="loader">
      <%= render partial: "shared/loader_spinner", locals: { css_class: "text-5xl w-22 h-22"} %>
    </div>
  
  <div class="flex flex-col absolute bottom-4 min-w-full text-center text-1xl">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "md:hover:scale-110 transition-all" %>
  </div>
</section>
